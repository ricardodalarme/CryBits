<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:semi="https://irihi.tech/semi"
        x:Class="CryBits.Editors.AvaloniaUI.Forms.EditorDataWindow"
        Title="Data Editor"
        Width="361" Height="710"
        CanResize="False"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <semi:SemiTheme x:Key="SemiTheme" Locale="en-US" />
        </ResourceDictionary>
    </Window.Resources>

    <!-- Outer layout: content (scrollable) on top, Save/Cancel pinned to bottom -->
    <Grid RowDefinitions="*,Auto" Margin="10">

        <!-- ─── Scrollable content ─── -->
        <ScrollViewer Grid.Row="0" Margin="0,0,0,8">
            <Border BorderThickness="1" BorderBrush="{DynamicResource SemiBorderColor}"
                    CornerRadius="4" Padding="10">
                <StackPanel Spacing="8">
                    <TextBlock Text="General" FontWeight="Bold" Margin="0,0,0,2" />

                    <!-- Game name -->
                    <TextBlock Text="Game name:" />
                    <TextBox x:Name="txtGame_Name" />

                    <!-- Welcome message -->
                    <TextBlock Text="Welcome message:" Margin="0,4,0,0" />
                    <TextBox x:Name="txtWelcome" />

                    <!-- Port -->
                    <TextBlock Text="Port:" Margin="0,4,0,0" />
                    <NumericUpDown x:Name="numPort" Minimum="0" Maximum="65535" />

                    <!-- Maximum players online (note) -->
                    <TextBlock Text="Maximum players online:" Margin="0,4,0,0" />
                    <TextBlock Text="(Need to restart the server)"
                               FontStyle="Italic" FontSize="11"
                               HorizontalAlignment="Right" />
                    <NumericUpDown x:Name="numMax_Players" Minimum="1" Maximum="255" />

                    <!-- Two-per-row numeric fields -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="8" Margin="0,4,0,0">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Max characters:" />
                            <NumericUpDown x:Name="numMax_Characters" Minimum="1" Maximum="255" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="Max party members:" />
                            <NumericUpDown x:Name="numMax_Party_Members" Minimum="0" Maximum="10" />
                        </StackPanel>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="8" Margin="0,4,0,0">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Points per levelup:" />
                            <NumericUpDown x:Name="numPoints" Minimum="0" Maximum="10" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="Max map items:" />
                            <NumericUpDown x:Name="numMax_Map_Items" Minimum="0" Maximum="255" />
                        </StackPanel>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="8" Margin="0,4,0,0">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Min name length:" />
                            <NumericUpDown x:Name="numMin_Name" Minimum="1" Maximum="255" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="Max name length:" />
                            <NumericUpDown x:Name="numMax_Name" Minimum="1" Maximum="255" />
                        </StackPanel>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="8" Margin="0,4,0,0">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Min password length:" />
                            <NumericUpDown x:Name="numMin_Password" Minimum="1" Maximum="255" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="Max password length:" />
                            <NumericUpDown x:Name="numMax_Password" Minimum="1" Maximum="255" />
                        </StackPanel>
                    </Grid>

                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- ─── Save / Cancel ─── -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="8">
            <Button Grid.Column="0" Content="Save"   Click="butSave_Click"
                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />
            <Button Grid.Column="1" Content="Cancel" Click="butCancel_Click"
                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />
        </Grid>

    </Grid>
</Window>
